<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/aplusb"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/aplusb"
            android:textSize="15sp" />

        <Button
            android:id="@+id/axb"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/axb"
            android:textSize="15sp"
            android:layout_below="@id/aplusb"/>

        <Button
            android:id="@+id/adivb"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/adivb"
            android:textSize="15sp"
            android:layout_below="@id/axb"/>

        <Button
            android:id="@+id/topBottomMult"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/topBottomMult"
            android:textSize="15sp"
            android:layout_below="@id/adivb" />
        
        <EditText
            android:id="@+id/aBound"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_below="@id/topBottomMult"
            android:layout_toLeftOf="@id/bBound"/>

        <EditText
            android:id="@+id/bBound"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/topBottomMult" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>